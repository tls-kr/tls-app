        "/upload/single/{path}": {
            "post": {
                "summary": "Upload a single file.",
                "description": "In this example, the file path is part of the URL.",
                "operationId": "upload:single",
                "tags": ["path", "body", "files"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": ["file"],
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "path",
                        "in": "path",
                        "required": true,
                        "schema":{ "type": "string" }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created uploaded file",
                        "content": {
